<%- include('partials/head', { title: "Available Cars | CarGo", pageStyle: "css/carListing.css" }) %>
<body>

    <%- include('partials/navbar') %>

    <section class="car-listing">
        <h1>Available Cars for Rent</h1>

        <div class="car-grid">
            <% if (cars.length > 0) { %>
                <% cars.forEach(car => { %>
                    <div class="car-card">
                        <img src="<%= car.image %>" alt="<%= car.brand %> - <%= car.model %>">
                        <div class="car-details">
                            <h3><%= car.brand %> - <%= car.model %></h3>
                            <p>Price: $<%= car.price_per_day %>/day</p>
                            <a href="/cars/book/<%= car.id %>" class="rent-btn">Rent Now</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No cars available for rent at the moment.</p>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>

</body>
</html>
