<%- include('partials/head', { title: "My Bookings | Car Rental", pageStyle: "css/myBookings.css" }) %>

<body>
    <%- include('partials/navbar') %>

    <section class="bookings-page">
        <h2>My Bookings</h2>

        <% if (bookings.length === 0) { %>
            <p>No active bookings found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Dates</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.Car.brand %> - <%= booking.Car.model %></td>
                            <td><%= booking.start_date %> to <%= booking.end_date %></td>
                            <td>$<%= booking.total_price %></td>
                            <td>
                                <% if (booking.status === "Cancelled") { %>
                                    <span class="status-text cancelled-text">‚ùå Cancelled</span>
                                <% } else if (booking.request_status === "Rejected") { %>
                                    <span class="status-text rejected-text">‚ùå Edit Rejected</span>
                                <% } else if (booking.request_status === "Edit Requested") { %>
                                    <span class="status-text pending-text">‚è≥ Edit Pending</span>
                                <% } else if (booking.request_status === "Cancel Requested") { %>
                                    <span class="status-text pending-text">‚è≥ Cancel Pending</span>
                                <% } else { %>
                                    <span class="status-text confirmed-text">‚úÖ Confirmed</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (!booking.Payment || booking.Payment.payment_status === 'pending') { %>
                                    <a href="/payment/checkout?booking_id=<%= booking.id %>" class="btn btn-primary">üí≥ Complete Payment</a>
                                <% } else if (booking.request_status === "Edit Requested" || booking.request_status === "Cancel Requested") { %>
                                    <p>‚è≥ Request Pending Admin Approval</p>
                                <% } else { %>
                                    <form action="/booking/request-edit" method="POST">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        <label for="new_start_date">New Start Date:</label>
                                        <input type="date" id="new_start_date_<%= booking.id %>" name="new_start_date" required>
                                        <label for="new_end_date">New End Date:</label>
                                        <input type="date" id="new_end_date_<%= booking.id %>" name="new_end_date" required>
                                        <button type="submit" class="btn btn-secondary">Request Edit</button>
                                    </form>

                                    <form action="/booking/request-cancel" method="POST">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        <button type="submit" class="btn btn-danger">‚ùå Request Cancel</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>

    <!-- ‚úÖ NEW: Refunded Transactions Section -->
    <section class="refunds-section">
        <h2>Refunded Transactions</h2>
        <% if (refundedPayments.length === 0) { %>
            <p>No refunds processed.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Amount</th>
                        <th>Refund Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% refundedPayments.forEach(payment => { %>
                        <tr>
                            <td><%= payment.transaction_id %></td>
                            <td>$<%= payment.amount %></td>
                            <td><%= payment.updatedAt.toDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".inline-form").forEach(form => {
                form.addEventListener("submit", function (event) {
                    const startDate = form.querySelector("input[name='new_start_date']");
                    const endDate = form.querySelector("input[name='new_end_date']");

                    if (startDate && endDate && new Date(endDate.value) <= new Date(startDate.value)) {
                        event.preventDefault();
                        alert("‚ùå End Date must be after Start Date.");
                    }
                });
            });
        });
    </script>

    <%- include('partials/footer') %>
</body>
</html>
