<%- include('partials/head', { title: "My Bookings | Car Rental", pageStyle: "css/myBookings.css" }) %>

<body>
    <%- include('partials/navbar') %>

    <section class="bookings-page">
        <h2>My Bookings</h2>

        <% if (bookings.length === 0) { %>
            <p>No bookings found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Dates</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.Car.brand %> - <%= booking.Car.model %></td>
                            <td><%= booking.start_date %> to <%= booking.end_date %></td>
                            <td>$<%= booking.total_price %></td>
                            <td><%= booking.status %></td>
                            <td>
                                <% if (!booking.Payment || booking.Payment.payment_status === 'pending') { %>
                                    <a href="/payment/checkout?booking_id=<%= booking.id %>" class="btn btn-primary">Complete Payment</a>
                                <% } else if (booking.status === "Edit Requested" || booking.status === "Cancel Requested") { %>
                                    <p>Request Pending Admin Approval</p>
                                <% } else { %>
                                    <!-- Edit Booking Form -->
                                    <form action="/booking/request-edit" method="POST">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        <label>New Start Date:</label>
                                        <input type="date" name="new_start_date" required>
                                        <label>New End Date:</label>
                                        <input type="date" name="new_end_date" required>
                                        <button type="submit" class="btn btn-secondary">Request Edit</button>
                                    </form>

                                    <!-- Cancel Booking Form -->
                                    <form action="/booking/request-cancel" method="POST">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        <button type="submit" class="btn btn-danger">Request Cancel</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>

    <%- include('partials/footer') %>
</body>
</html>
