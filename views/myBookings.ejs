<%- include('partials/head', { title: "My Bookings | Car Rental", pageStyle: "css/myBookings.css" }) %>

<body>
    <%- include('partials/navbar') %>

    <section class="bookings-page">
        <h2>My Bookings</h2>

        <% if (bookings.length === 0) { %>
            <p>No bookings found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Dates</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.Car.brand %> - <%= booking.Car.model %></td>
                            <td><%= booking.start_date %> to <%= booking.end_date %></td>
                            <td>$<%= booking.total_price %></td>
                            <td><%= booking.Payment ? booking.Payment.payment_status : 'Pending' %></td>
                            <td>
                                <% if (!booking.Payment || booking.Payment.payment_status === 'pending') { %>
                                    <a href="/payment/checkout?booking_id=<%= booking.id %>" class="btn btn-primary">Complete Payment</a>
                                <% } else { %>
                                    <a href="/bookings/edit/<%= booking.id %>" class="btn btn-secondary">Edit</a>
                                    <a href="/bookings/cancel/<%= booking.id %>" class="btn btn-danger">Cancel</a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>

    <%- include('partials/footer') %>
</body>
</html>
