<%- include('partials/head', { title: "My Bookings | CarGo", pageStyle: "css/myBookings.css" }) %>

<body>
    <%- include('partials/navbar') %>

    <section class="bookings-page">
        <h2>My Bookings</h2>

        <% if (bookings.length === 0) { %>
            <p>No active bookings found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Dates</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.Car.brand %> - <%= booking.Car.model %></td>
                            <td><%= booking.start_date %> to <%= booking.end_date %></td>
                            <td>$<%= booking.total_price %></td>
                            <td>
                                <% if (booking.status === "Cancelled") { %>
                                    <span class="status-text cancelled-text">Cancelled</span>
                                <% } else if (booking.request_status === "Rejected") { %>
                                    <span class="status-text rejected-text">Edit Rejected</span>
                                <% } else if (booking.request_status === "Edit Requested") { %>
                                    <span class="status-text pending-text">Edit Pending</span>
                                <% } else if (booking.request_status === "Cancel Requested") { %>
                                    <span class="status-text pending-text">Cancel Pending</span>
                                <% } else { %>
                                    <span class="status-text confirmed-text">Confirmed</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (!booking.Payment || booking.Payment.payment_status === 'pending') { %>
                                    <a href="/payment/checkout?booking_id=<%= booking.id %>" class="btn btn-primary">Complete Payment</a>
                                <% } else if (booking.request_status === "Edit Requested" || booking.request_status === "Cancel Requested") { %>
                                    <p>⏳ Request Pending Admin Approval</p>
                                <% } else { %>
                                    <div class="booking-action-buttons">
                                    <form action="/booking/request-edit" method="POST" class="edit-booking-form">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        
                                        <!-- Store Original Booking Duration -->
                                        <input type="hidden" name="original_days" value="<%= (new Date(booking.end_date) - new Date(booking.start_date)) / (1000 * 60 * 60 * 24) %>">
                                    
                                        <label for="new_start_date">New Start Date:</label>
                                        <input type="date" class="new-start-date" name="new_start_date" required>
                                        
                                        <label for="new_end_date">New End Date:</label>
                                        <input type="date" class="new-end-date" name="new_end_date" required>
                                        
                                        <button type="submit" class="btn btn-secondary">Request Edit</button>
                                    </form>
                                    

                                    <form action="/booking/request-cancel" method="POST">
                                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                        <button type="submit" class="btn btn-danger">Request Cancel</button>
                                    </form>
                                    </div>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>

    <!-- ✅ NEW: Refunded Transactions Section -->
    <section class="refunds-section">
        <h2>Refunded Transactions</h2>
        <% if (refundedPayments.length === 0) { %>
            <p>No refunds processed.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Amount</th>
                        <th>Refund Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% refundedPayments.forEach(payment => { %>
                        <tr>
                            <td><%= payment.transaction_id %></td>
                            <td>$<%= payment.amount %></td>
                            <td><%= payment.updatedAt.toDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".edit-booking-form").forEach(form => {
                const startDateField = form.querySelector(".new-start-date");
                const endDateField = form.querySelector(".new-end-date");
                const originalDays = parseInt(form.querySelector("input[name='original_days']").value);
    
                function validateDateSelection() {
                    if (!startDateField.value || !endDateField.value) return; // ✅ Only validate if both fields are filled
                    
                    const startDate = new Date(startDateField.value);
                    const endDate = new Date(endDateField.value);
                    const selectedDays = (endDate - startDate) / (1000 * 60 * 60 * 24);
    
                    if (selectedDays !== originalDays) {
                        alert(`❌ You must select exactly ${originalDays} days.`);
                        endDateField.value = ""; // ✅ Only clear end date, not start date
                    }
                }
    
                endDateField.addEventListener("change", validateDateSelection); // ✅ Only trigger validation when end date is selected
            });
        });
    </script>
    
    

    <%- include('partials/footer') %>
</body>
</html>
